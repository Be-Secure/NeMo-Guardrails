define user input
  "..."

define flow
  user input
  bot $llm_output

define bot allow
  "ALLOW"

define bot deny
  "DENY"

define subflow dummy output rail
  """A dummy output rail which checks if the word "dummy" is included in the text."""
  if "dummy" in $bot_message
    if $config.allow_exceptions
      create event DummyOutputException(message="Dummy output detected. The bot's message contains the word 'dummy'.")
    else
      bot deny
      stop

define subflow allow output
  if $config.allow_exceptions
    create event AllowOutputException(message="Allow output triggered. The bot will respond with 'ALLOW'. To see it in action you must disable the `allow_exceptions` configuration setting.")
  else
    bot allow
    stop
